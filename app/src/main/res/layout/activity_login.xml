<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="login"
            type="com.msg.gfo_v2.gfo.ui.component.login.LoginActivity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_email_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4162" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_password_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5179" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_gsm_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2138" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_login_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6958" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_pass_tv_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7889" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_regist_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.961" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_auto_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6241" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_login_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.046" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_gsm_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3868" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_email_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4829" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_login_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7632" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_password_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.584" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_pass_tv_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8119" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_regist_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.984" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_auto_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6511" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_login_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="58dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_et_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0549" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_pass_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2449" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_regist_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2521" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_btn_regist_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5911" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_save_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.357" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_login_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.135" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_gsm_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.564" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_et_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9466" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_pass_tv_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.751" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_regist_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.581" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_regist_btn_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7125" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_auto_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3071" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_save_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.611" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_login_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.28" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_view_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.105" />


        <View
            android:id="@+id/btn_back"
            android:layout_width="18dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_left_arrow_svgrepo_com"
            android:onClick="@{login::onClickPageBtn}"
            app:layout_constraintTop_toTopOf="@id/g_tv_login_t"
            app:layout_constraintBottom_toBottomOf="@id/g_tv_login_b"
            app:layout_constraintStart_toStartOf="@id/g_et_s"
            app:layout_constraintEnd_toEndOf="@id/g_view_e" />
        
        <TextView
            android:id="@+id/tv_goback"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/action_log_in"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans"
            android:onClick="@{login::onClickPageBtn}"
            app:layout_constraintTop_toTopOf="@id/g_tv_login_t"
            app:layout_constraintBottom_toBottomOf="@id/g_tv_login_b"
            app:layout_constraintStart_toStartOf="@id/g_tv_login_s"
            app:layout_constraintEnd_toEndOf="@id/g_tv_login_e" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/action_log_in"
            android:background="@color/g_fo_blue"
            android:shadowColor="#4D829AE3"
            android:onClick="@{login::onClickPageBtn}"
            app:layout_constraintTop_toTopOf="@id/g_login_t"
            app:layout_constraintBottom_toBottomOf="@id/g_login_b"
            app:layout_constraintStart_toStartOf="@id/g_et_s"
            app:layout_constraintEnd_toEndOf="@id/g_et_e"/>

        <TextView
            android:id="@+id/forgot_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/forgot_password"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:letterSpacing="-0.03"
            android:fontFamily="@font/notosans"
            app:layout_constraintStart_toStartOf="@id/g_pass_s"
            app:layout_constraintTop_toTopOf="@id/g_pass_tv_t"
            app:layout_constraintBottom_toBottomOf="@id/g_pass_tv_b"/>
        <TextView
            android:id="@+id/btn_findPassword"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/find_password"
            android:textColor="@color/text_blue"
            android:textSize="12sp"
            android:letterSpacing="-0.03"
            android:fontFamily="@font/notosans"
            android:onClick="@{login::onClickPageBtn}"
            app:layout_constraintTop_toTopOf="@id/g_pass_tv_t"
            app:layout_constraintBottom_toBottomOf="@id/g_pass_tv_b"
            app:layout_constraintStart_toEndOf="@id/forgot_password_tv"
            app:layout_constraintEnd_toEndOf="@id/g_pass_tv_e"/>

        <TextView
            android:id="@+id/gsm_"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/gsm_"
            android:textAppearance="@style/gsm_"
            android:fontFamily="@font/notosanssymbols_600"
            android:textStyle="bold"
            android:lineSpacingExtra="-49px"
            android:gravity="top"
            android:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/g_gsm_t"
            app:layout_constraintBottom_toBottomOf="@id/g_gsm_b"
            app:layout_constraintStart_toStartOf="@id/g_et_s"
            app:layout_constraintEnd_toEndOf="@id/g_gsm_e"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_edittext"
            android:hint="@string/et_id"
            android:textAppearance="@style/some_et"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toTopOf="@id/g_email_t"
            app:layout_constraintBottom_toBottomOf="@id/g_email_b"
            app:layout_constraintStart_toStartOf="@id/g_et_s"
            app:layout_constraintEnd_toEndOf="@id/g_et_e"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_edittext"
            android:hint="@string/et_password"
            android:textAppearance="@style/some_et"
            android:inputType="textPassword"
            app:layout_constraintTop_toTopOf="@id/g_password_t"
            app:layout_constraintBottom_toBottomOf="@id/g_password_b"
            app:layout_constraintStart_toStartOf="@id/g_et_s"
            app:layout_constraintEnd_toEndOf="@id/g_et_e"/>
        
        <TextView
            android:id="@+id/member_ask"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/member_ask"
            android:textSize="12sp"
            android:letterSpacing="-0.03"
            android:textColor="@color/text_gray"
            android:fontFamily="@font/notosans"
            android:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/g_regist_t"
            app:layout_constraintBottom_toBottomOf="@id/g_regist_b"
            app:layout_constraintStart_toStartOf="@id/g_regist_s"
            app:layout_constraintEnd_toEndOf="@id/g_regist_e"/>
        <TextView
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/action_sign_in"
            android:textSize="12sp"
            android:letterSpacing="-0.03"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans"
            android:autoSizeTextType="uniform"
            android:onClick="@{login::onClickPageBtn}"
            app:layout_constraintTop_toTopOf="@id/g_regist_t"
            app:layout_constraintBottom_toBottomOf="@id/g_regist_b"
            app:layout_constraintStart_toStartOf="@id/g_btn_regist_s"
            app:layout_constraintEnd_toEndOf="@id/g_regist_btn_e"/>
        
        <CheckBox
            android:id="@+id/btn_auto_login"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/auto_login"
            android:textSize="14sp"
            android:fontFamily="@font/notosans"
            android:button="@drawable/selector_login"
            app:layout_constraintTop_toTopOf="@id/g_auto_t"
            app:layout_constraintBottom_toBottomOf="@id/g_auto_b"
            app:layout_constraintStart_toStartOf="@id/g_et_s"
            app:layout_constraintEnd_toEndOf="@id/g_auto_e" />
        <CheckBox
            android:id="@+id/btn_save_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/save_id"
            android:textSize="14sp"
            android:fontFamily="@font/notosans"
            android:button="@drawable/selector_login"
            app:layout_constraintTop_toTopOf="@id/g_auto_t"
            app:layout_constraintBottom_toBottomOf="@id/g_auto_b"
            app:layout_constraintStart_toStartOf="@id/g_save_s"
            app:layout_constraintEnd_toEndOf="@id/g_save_e" />





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>